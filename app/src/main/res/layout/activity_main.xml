<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Nút XẤU -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBlockUi"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="CHẠY TÁC VỤ NẶNG TRÊN UI THREAD"
        app:cornerRadius="16dp"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/red_600"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="2dp" />

    <!-- Nút ĐÚNG -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnUseBackgroundThread"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="CHẠY TÁC VỤ NẶNG TRÊN BACKGROUND (Optimized)"
        app:cornerRadius="16dp"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/green_600"
        app:layout_constraintTop_toBottomOf="@id/btnBlockUi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:elevation="2dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCheckLag"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="KIỂM TRA LAG"
        app:cornerRadius="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnUseBackgroundThread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="2dp" />

    <!-- ProgressBar lớn, giữa màn hình -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="gone"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintTop_toBottomOf="@id/btnCheckLag"
        app:layout_constraintBottom_toTopOf="@id/cardViewResult"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- CardView hiển thị kết quả -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/progressBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kết quả sẽ hiển thị ở đây"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="20dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:lineSpacingExtra="4dp"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>